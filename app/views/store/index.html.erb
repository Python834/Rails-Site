<h1>Listing products</h1>
<div class="table_div">
  <%= paginate @products %>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Selling price</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= truncate(product.description, :escape => false) %></td>
          <td class="qty"><%= product.quantity %></td>
          <td><%= number_to_currency(product.selling_price) %></td>
          <td><%= product.weight %> lb.</td>
          <td><%= image_tag(product.thumbnail) %></td>
          <td><%= link_to 'Show', product %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @products %>
  <% if current_user.try(:admin?) %>
      <%= link_to('Edit Products', products_path) %>
  <% end %>
  <br />
</div>
