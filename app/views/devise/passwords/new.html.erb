<h1>Forgot password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'log_in' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %><br /><br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>


